@*@model Quiz*@
@using Quizard.ViewModels
@model EditQuizViewModel

<!-- Large modal -->
<div class="modal fade bd-example-modal-lg" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center w-100" id="exampleModalLongTitle">Edit Quiz</h5>
            </div>

            <div class="modal-body">
                <form action="UpdateQuiz">
                    <div class="form-group">
                        <label asp-for="@Model.Quiz.QuizName" class="col-form-label">Edit Text:</label>
                        <textarea asp-for="@Model.Quiz.QuizName" name="QuizName" class="form-control" id="quiz-text" placeholder="@Model.Quiz.QuizName"> @Model.Quiz.QuizName </textarea>
                    </div>

                    <input type="hidden" asp-for="@Model.Quiz.Id" name="Id" value="@Model.Quiz.Id">

                    @*<div class="form-group">
                        <label for="Module" class="col-form-label">Module:</label>
                        <input for="Module" type="text" class="form-control" id="inlineFormInputName" placeholder="CS101">
                    </div>*@
                    <div class="form-group">
                        <label asp-for="@Model.Quiz.TimeLimit" class="col-form-label">Quiz Duration:</label>
                        <input asp-for="@Model.Quiz.TimeLimit" type="text" name="TimeLimit" class="form-control" id="inlineFormInputName" placeholder="45" value="@Model.Quiz.TimeLimit">
                    </div>

                    <div class="form-group">
                        <label for="Module" class="col-md-2"></label>
                        <div class="col-md-10">
                            <label for="Module" class="col-form-label">Module:</label>
                            <select asp-for="@Model.Quiz.ModuleId" asp-items="@Model.ModuleList" class="form-control" name="ModuleId">
                                <option disabled selected>--Select Module--</option>
                            </select>
                        </div>
                    </div>

                    <br />

                    <div class="form-group">
                        <label class="check-container">
                            @Html.CheckBoxFor(model => model.Shuffled)
                            <label asp-for="@Model.Quiz.Shuffled" class="col-form-label" name="Shuffled">Shuffle Questions</label>
                            <div class="checkmark"></div>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="check-container">
                            @Html.CheckBoxFor(model => model.Deployed)
                            <label asp-for="@Model.Quiz.Deployed" class="col-form-label">Quiz Deployed</label>
                            <div class="checkmark"></div>
                        </label>
                    </div>

                   @* <div class="form-group">
                        <label class="check-container">
                             <input type="checkbox" name="Deployed" asp-for="@Model.Quiz.Deployed" value="@Model.Quiz.Deployed" checked="@Model.Quiz.Deployed"/>
                            <label asp-for="@Model.Quiz.Deployed" class="col-form-label">Quiz Deployed</label>
                            <div class="checkmark"></div>
                        </label>
                    </div>*@

                </form>
            </div>

            <div class="modal-footer">
                <div class="col text-center">
                    <button type="button" class="button--save" data-bs-dismiss="modal" id="exit-edit-modal">Cancel</button>
                    <button type="button" class="button--save" data-save-quiz="modal" id="save-options-confirm">Save Changes</button>
                </div>
            </div>

        </div>
    </div>
</div>
