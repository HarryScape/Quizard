@model Quiz


<!-- Large modal -->
<div class="modal fade bd-example-modal-lg" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center w-100" id="exampleModalLongTitle">Edit Question</h5>
            </div>

            <div class="modal-body">
                <form action="UpdateQuiz">
                    <div class="form-group">
                        <label asp-for="QuizName" class="col-form-label">Edit Text:</label>
                        <textarea asp-for="QuizName" class="form-control" id="quiz-text" placeholder="@Model.QuizName"> @Model.QuizName </textarea>
                    </div>

                    <input type="hidden" asp-for="Id" name="Id" value="@Model.Id">

                    <div class="form-group">
                        <label for="Module" class="col-form-label">Module:</label>
                        <input for="Module" type="text" class="form-control" id="inlineFormInputName" placeholder="CS101">
                    </div>
                    <div class="form-group">
                        <label for="TimeLimit" class="col-form-label">Quiz Duration:</label>
                        <input for="TimeLimit" type="text" class="form-control" id="inlineFormInputName" placeholder="45">
                    </div>
                    <div class="form-group">
                        <label class="check-container">
                            <input checked="checked" type="checkbox">
                            <div class="checkmark"></div>
                        </label>
                        <label for="isShuffled" class="col-form-label">Shuffle Questions</label>
                    </div>
                    <div class="form-group">
                        <label class="check-container">
                            <input checked="checked" type="checkbox">
                            <div class="checkmark"></div>
                        </label>
                        <label for="isActive" class="col-form-label">Quiz Active</label>
                    </div>

                </form>
            </div>


            <div class="modal-footer">
                <div class="col text-center">
                    <button type="button" class="button--save" data-bs-dismiss="modal" id="exit-edit-modal">Cancel</button>
                    <button type="button" class="button--save" data-save="modal" id="save-options-confirm">Save Changes</button>
                </div>
            </div>

        </div>
    </div>
</div>
