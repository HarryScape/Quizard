@model Quizard.ViewModels.CreateQuizViewModel

<script src="~/js/site.js" asp-append-version="true"></script>


<div id="containers">

    <div class="frame">
        @*Container*@
        <div class="popup">
            <strong>Default Question Pool</strong>
                <div class="object">Consider the following hierarchy of functions that can be deﬁned from an asymptotic point of view</div>
                <div class="object">How many LOTR movies are there?</div>
                <div class="object">What is 2+3?</div>
                <div class="object">Which of the following are dinosaurs?</div>
                <div class="object">Comment the effects on bonds price of a rise in interest rates</div>
                <div class="object">Who is buried in Grant's tomb in New York City?</div>
                <div class="object">The American holiday of Thanks giving is celebrated on the __________ Thursday of November</div>
                <div class="object">Who lives at the North Pole?</div>
        </div>
        @*<div class="object">This is a test element for debugging this nightmare.</div>*@
    </div>

    <div class="frame">
        @*Container*@
        <div class="popup">
            <strong>Section 2 - Answer any two questions</strong>
                <div class="object">Define the following terms:</div>
                <div class="object">Time Complexity</div>
                <div class="object">Space Complexity</div>
        </div>
    </div>

</div>



@*sections*@
@{
    int Sindex = 0;
}
@foreach (var Qsection in Model.Sections.Where(i => i.QuizId.Equals(Model.Quiz.Id)))
{
    int sectionId = Qsection.Id;
    <div class="accordion-section-item" id="@(sectionId)">
        @*<button id="delete-button" type="submit"><img src="@Url.Content("~/Images/delbin.png")" onclick="Delete()"></button>*@
        <a id="sec-del" onclick="DeleteSection(@sectionId)">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="humbleicons hi-trash">
                <path xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 6l.934 13.071A1 1 0 007.93 20h8.138a1 1 0 00.997-.929L18 6m-6 5v4m8-9H4m4.5 0l.544-1.632A2 2 0 0110.941 3h2.117a2 2 0 011.898 1.368L15.5 6" />
            </svg>
        </a>

        <button class="accordion-section-button"> <strong> @Qsection.SectionName </strong> </button>
        <div class="accordion-section-collapse ">
            <div class="accordion-section-body">
                @*questions *@
                <div class="accordion-question">
                    @{
                        int Qindex = 0;
                    }
                    @foreach (var question in Model.Questions.Where(i => i.SectionId.Equals(Qsection.Id)))
                    {
                        int questionId = question.Id;

                        @*<a id="sec-del" onclick="DeleteSection(@sectionId)">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="humbleicons hi-pencil">
                <path xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.5 7.5l3 3M4 20v-3.5L15.293 5.207a1 1 0 011.414 0l2.086 2.086a1 1 0 010 1.414L7.5 20H4z"/>
                </svg>
                </a>*@

                        <div class="accordion-question-item" draggable="true" id="@questionId" data-section-index="@Sindex" data-sectionId="@sectionId" data-position="@Qindex">

                            <a id="sec-del" onclick="DeleteSection(@sectionId)">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="humbleicons hi-pencil">
                                    <path xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.5 7.5l3 3M4 20v-3.5L15.293 5.207a1 1 0 011.414 0l2.086 2.086a1 1 0 010 1.414L7.5 20H4z" />
                                </svg>
                            </a>

                            <button class="accordion-question-button"> @question.QuestionTitle </button>
                            <div class="accordion-question-collapse collapse">
                                <div class="accordion-question-body">
                                    @*answers*@
                                    <ol>
                                        @foreach (var answer in Model.Answers.Where(i => i.QuestionId.Equals(question.Id)))
                                        {
                                            @*<li> @answer.QuestionAnswer </li>*@
                                            @*@if (answer.isCorrect.Contains("Correct"))*@
                                            @if (answer.isCorrect == true)
                                            {
                                                <li class="correct-ans"> <strong>@answer.QuestionAnswer</strong> </li>
                                            }
                                            else
                                            {
                                                <li> @answer.QuestionAnswer </li>
                                            }
                                        }
                                    </ol>
                                </div>
                            </div>
                        </div>
                        Qindex++;
                    }
                </div>
            </div>
        </div>
    </div>
    Sindex++;
}



