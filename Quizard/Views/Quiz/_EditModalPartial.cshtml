@model Question


<!-- Large modal -->
<div class="modal fade bd-example-modal-lg" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center w-100" id="exampleModalLongTitle">Edit Question</h5>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="question-text" class="col-form-label">Change text:</label>
                        <textarea class="form-control" id="question-text" placeholder="@Model.QuestionTitle"> @Model.QuestionTitle </textarea>
                    </div>


                    <div class="form-group">
                        <label for="question-text" class="col-form-label">Mark Weight:</label>
                        <input type="text" class="form-control" id="inlineFormInputName" placeholder="5">
                    </div>
                    <div class="form-group">
                        <label class="check-container">
                            <input checked="checked" type="checkbox">
                            <div class="checkmark"></div>
                        </label>
                        <label for="margin-text" class="col-form-label">Margin of error:</label>
                        <input type="text" class="form-control" id="inlineFormInputName" placeholder="0.5">
                    </div>
                    <div class="form-group">
                        <label class="check-container">
                            <input checked="checked" type="checkbox">
                            <div class="checkmark"></div>
                        </label>
                        <label for="question-text" class="col-form-label">Negative Marking</label>
                        <input type="text" class="form-control" id="inlineFormInputName" placeholder="-20%">
                    </div>

                    <br />
                    <div class="form-group">
                        <div class="upload-container">
                            <label for="question-text" class="col-form-label">Upload supplimentary content:</label>
                            <div class="mb-3 mt-3">
                                <form method="post" enctype="multipart/form-data" asp-controller="Dashboard" asp-action="UploadQuiz">
                                    <input type="hidden" id="UserId" name="UserId" />
                                    <div class="input-group">
                                        <input type="file" name="file" id="UploadAlt">
                                        <input class="button--add" value="Upload" type="submit" id="AddSectionBtn">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <div class="col text-center">
                    <button type="button" class="button--save" data-bs-dismiss="modal" id="exit-edit-modal">Cancel</button>
                    <button type="button" class="button--save" id="del-confirm">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
