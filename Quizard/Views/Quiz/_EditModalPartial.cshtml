@model Quizard.ViewModels.UpdateQuestionViewModel


<!-- Large modal -->
<div class="modal fade bd-example-modal-lg" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center w-100" id="exampleModalLongTitle">Edit Question</h5>
            </div>

            <div class="modal-body">
                <form method="post" asp-action="UpdateQuestion" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Question.QuestionTitle" class="col-form-label">Edit Text:</label>
                        <textarea asp-for="Question.QuestionTitle" class="form-control" id="question-text" placeholder="@Model.Question.QuestionTitle"> @Model.Question.QuestionTitle </textarea>
                    </div>

                    <input type="hidden" asp-for="Question.Id" value="@Model.Question.Id">

                    @if (Model.Question.QuestionType != Quizard.Data.Enum.QuestionType.GROUP)
                    {
                        <div class="form-group">
                            <label asp-for="Question.Mark" class="col-form-label">Mark Weight:</label>
                            <input asp-for="Question.Mark" type="text" class="form-control" id="inlineFormInputName" value="@Model.Question.Mark" autocomplete="off" placeholder="2">
                        </div>
                        <div class="form-group">
                            <label asp-for="Question.ErrorMargin" class="col-form-label">Margin of error:</label>
                            <input asp-for="Question.ErrorMargin" type="text" class="form-control" id="inlineFormInputName" value="@Model.Question.ErrorMargin" autocomplete="off" placeholder="0.05">
                        </div>
                        <div class="form-group">
                            <label asp-for="Question.NegativeMark" class="col-form-label">Negative Marking</label>
                            <input asp-for="Question.NegativeMark" type="text" class="form-control" id="inlineFormInputName" value="@Model.Question.NegativeMark" autocomplete="off" placeholder="0.25">
                        </div>
                    }

                    @if (Model.Question.QuestionType == Quizard.Data.Enum.QuestionType.GROUP)
                    {
                        <br />
                        @if(Model.Question.ContentUrl != null)
                        {
                            <img class="edit-case-image" src="@Model.Question.ContentUrl" alt="Case Study Image">
                            <button type="button" class="button--save" onclick="location.href='@Url.Action("DeleteImage", "Quiz", new { questionId = @Model.Question.Id })'">Delete Image</button>
                        }
                        else
                        {
                           <div class="form-group">
                            <div class="upload-container">
                                <label for="question-text" class="col-form-label">Upload supplimentary Image:</label>
                                <div class="mb-3 mt-3">
                                    <input type="hidden" id="UserId" name="UserId" />
                                    <div class="input-group">
                                        <input type="file" name="file" id="UploadAlt" asp-for="file">
                                    </div>
                                </div>
                            </div>
                        </div> 
                        }
                    }

                    <br />

                        <div class="col text-center">
                            <button type="button" class="button--save" data-bs-dismiss="modal" id="exit-edit-modal">Cancel</button>
                            <button type="submit" class="button--save">Save Changes</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
