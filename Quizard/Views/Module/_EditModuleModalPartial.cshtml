@model Module



<!-- Large modal -->
<div class="modal fade bd-example-modal-lg" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center w-100" id="exampleModalLongTitle">Edit Module</h5>
            </div>

            <div class="modal-body">
                <form action="Module/EditModule">
 
                        <div class="form-group">
                            <label asp-for="ModuleCode" class="col-form-label">Module Code:</label>
                            <input asp-for="ModuleCode" type="text" class="form-control" id="inlineFormInputName" placeholder="CS101" value="@Model.ModuleCode" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="col-form-label">Optional Description:</label>
                            <input asp-for="Description" type="text" class="form-control" id="inlineFormInputName" placeholder="Data Structures & Algorithms" value="@Model.Description" autocomplete="off">
                        </div>

                        <input type="hidden" asp-for="Id" name="Id" value="@Model.Id">
                </form>
            </div>

            <div class="modal-footer">
                <div class="col text-center">
                    <button type="button" class="button--save" data-bs-dismiss="modal" id="exit-edit-modal">Cancel</button>
                    <button type="button" class="button--save" data-edit-module="modal" id="save-confirm">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
